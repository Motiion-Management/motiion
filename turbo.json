{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CONVEX_DEPLOY_KEY", "NEXT_PUBLIC_CONVEX_URL"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "build:dev": {
      "dependsOn": ["^build"]
    },
    "build:dev:sim": {
      "dependsOn": ["^build"]
    },
    "build:dev:ios": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {},
    "clean": {
      "cache": false
    }
  }
}
