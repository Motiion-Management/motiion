{
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "name": "motiion",
  "scripts": {
    "add:web": "pnpm add --filter web-app",
    "add:native": "pnpm add --filter native-app",
    "add:backend": "pnpm add --filter @packages/backend",
    "dev": "turbo run dev --ui tui",
    "web": "turbo run dev --filter web-app",
    "native": "turbo run dev --filter native-app",
    "backend": "turbo run dev --filter @packages/backend",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-next": "15.4.2",
    "eslint-config-prettier": "^10.1.8",
    "next": "15.4.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "latest",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.37.0"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "zodvex": "link:/Users/jshebert/zodvex-standalone"
    }
  }
}
